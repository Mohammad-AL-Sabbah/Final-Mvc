@using Ecommerce.Models
@model Product

@{
    ViewData["Title"] = "إضافة منتج جديد";
}

@* الأنماط المخصصة للمظهر الاحترافي والحد الأدنى (Minimalist) وتنسيق معاينة الصورة *@
<style>
    body {
        background-color: #f8f9fa; /* خلفية فاتحة جداً */
    }
    .card-modern {
        border-radius: 1rem; /* زوايا مستديرة باعتدال */
        border: none;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08); /* ظل أنيق */
    }
    .form-control:focus, .form-select:focus, .form-control-lg:focus {
        border-color: #007bff; /* لون حدود عند التركيز */
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
    .image-preview-wrapper {
        position: relative;
        width: 120px; /* حجم ثابت للمعاينة */
        height: 120px;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #e9ecef;
    }
    .image-preview-wrapper img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }
    .remove-image-btn {
        position: absolute;
        top: 5px;
        right: 5px;
        width: 25px;
        height: 25px;
        font-size: 0.75rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        cursor: pointer;
        z-index: 10;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            <div class="card card-modern">
                <div class="card-body p-5">
                    
                    <h1 class="h3 fw-bold text-center mb-4 text-primary">إضافة منتج جديد</h1>
                    <p class="text-center text-muted mb-5">
                        أدخل تفاصيل المنتج ليصبح متاحاً للبيع في المتجر الإلكتروني.
                    </p>

                    <form asp-action="Store" method="post" enctype="multipart/form-data" id="productForm">

                        <div class="row mb-4">
                            <div class="col-md-7">
                                <label asp-for="Name" class="form-label fw-semibold">اسم المنتج</label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="اسم المنتج بالكامل" required />
                                <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-5 mt-3 mt-md-0">
                                <label asp-for="Price" class="form-label fw-semibold">السعر</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="مثلاً: 99.99" required />
                                <span asp-validation-for="Price" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">الوصف</label>
                            <textarea asp-for="Description" rows="4" class="form-control form-control-lg" placeholder="وصف تفصيلي للمنتج، الميزات والمواصفات..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Quantity" class="form-label fw-semibold">الكمية المتوفرة</label>
                                <input asp-for="Quantity" type="number" class="form-control form-control-lg" placeholder="عدد القطع في المخزون" required />
                                <span asp-validation-for="Quantity" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6 mt-3 mt-md-0">
                                <label asp-for="CategoryId" class="form-label fw-semibold">الفئة</label>
                                <select asp-for="CategoryId" class="form-select form-select-lg" required>
                                    <option value="" disabled selected>-- اختر فئة المنتج --</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label fw-semibold d-block mb-3">صورة المنتج</label>
                            
                            <div class="d-flex align-items-start">
                               
                                <div id="imagePreviewContainer" class="image-preview-wrapper me-4 d-none">
                                    <img id="imagePreview" src="#" alt="صورة المنتج" />
                                    <button type="button" id="removeImageBtn" class="remove-image-btn" aria-label="إزالة الصورة">
                                        <i class="bi bi-x fw-bold"></i>
                                    </button>
                                </div>
                                
                                <div class="flex-grow-1">
                                    <input type="file" name="file" id="ImageFile" class="form-control form-control-lg" accept="image/*" required />
                                    <small class="form-text text-muted">اختر صورة رئيسية واضحة للمنتج.</small>
                                </div>
                            </div>
                            <span asp-validation-for="Image" class="text-danger small mt-1 d-block"></span>
                        </div>
                        
                        <div class="d-grid gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold py-2">
                                <i class="bi bi-plus-circle-fill me-2"></i>
                                حفظ ونشر المنتج
                            </button>
                            
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg py-2">
                                <i class="bi bi-arrow-left me-2"></i>
                                العودة إلى قائمة المنتجات
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('ImageFile');
            const previewContainer = document.getElementById('imagePreviewContainer');
            const previewImage = document.getElementById('imagePreview');
            const removeBtn = document.getElementById('removeImageBtn');

            // 1. عرض المعاينة عند اختيار ملف
            fileInput.addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function (e) {
                        previewImage.src = e.target.result;
                        previewContainer.classList.remove('d-none');
                    };
                    
                    reader.readAsDataURL(this.files[0]);
                } else {
                    // إخفاء المعاينة إذا لم يتم اختيار ملف
                    previewContainer.classList.add('d-none');
                    previewImage.src = '#';
                }
            });

            // 2. إزالة الصورة عند النقر على زر (X)
            removeBtn.addEventListener('click', function () {
                previewContainer.classList.add('d-none');
                previewImage.src = '#';
                fileInput.value = ''; // مسح الملف المختار (هام)
            });
        });
    </script>
}