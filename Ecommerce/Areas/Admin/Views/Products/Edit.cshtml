@using Ecommerce.Models
@model Product

@{
    ViewData["Title"] = "تعديل المنتج";
}

@* الأنماط المخصصة للمظهر الاحترافي والحد الأدنى (Minimalist) *@
<style>
    body {
        background-color: #f8f9fa;
    }
    .card-modern {
        border-radius: 1rem;
        border: none;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08);
    }
    .form-control:focus, .form-select:focus, .form-control-lg:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
    .image-preview-wrapper {
        position: relative;
        width: 120px;
        height: 120px;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #e9ecef;
    }
    .image-preview-wrapper img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }
    .remove-image-btn {
        position: absolute;
        top: 5px;
        right: 5px;
        width: 25px;
        height: 25px;
        font-size: 0.75rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        cursor: pointer;
        z-index: 10;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            <div class="card card-modern">
                <div class="card-body p-5">
                    
                    <h1 class="h3 fw-bold text-center mb-4 text-primary">تعديل المنتج: @Model.Name</h1>
                    <p class="text-center text-muted mb-5">
                        قم بتحديث معلومات المنتج أو تغيير صورته.
                    </p>

                    <form asp-action="Update" method="post" enctype="multipart/form-data" id="productUpdateForm">
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" /> 
                        <input type="hidden" id="removeCurrentImageFlag" name="RemoveCurrentImage" value="false" />  

                        <div class="row mb-4">
                            <div class="col-md-7">
                                <label asp-for="Name" class="form-label fw-semibold">اسم المنتج</label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="اسم المنتج بالكامل" required />
                                <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-5 mt-3 mt-md-0">
                                <label asp-for="Price" class="form-label fw-semibold">السعر</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="مثلاً: 99.99" required />
                                <span asp-validation-for="Price" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">الوصف</label>
                            <textarea asp-for="Description" rows="4" class="form-control form-control-lg" placeholder="وصف تفصيلي للمنتج، الميزات والمواصفات..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Quantity" class="form-label fw-semibold">الكمية المتوفرة</label>
                                <input asp-for="Quantity" type="number" class="form-control form-control-lg" placeholder="عدد القطع في المخزون" required />
                                <span asp-validation-for="Quantity" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6 mt-3 mt-md-0">
                                <label asp-for="CategoryId" class="form-label fw-semibold">الفئة</label>
                                <select asp-for="CategoryId" class="form-select form-select-lg" required>
                                    <option value="" disabled>-- اختر فئة المنتج --</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        // استخدام Tag Helper لاختيار القيمة تلقائياً هو الأفضل، لكن سنستخدم الكود الموجود لديك لضمان التوافق.
                                        if(item.Id == Model.CategoryId)
                                        {
                                            <option value="@item.Id" selected >@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label fw-semibold d-block mb-3">صورة المنتج</label>
                            
                            <div class="d-flex flex-wrap align-items-end">
                                
                                @* 1. حاوية عرض الصورة الحالية أو المعاينة الجديدة *@
                                <div id="currentImageWrapper" class="image-preview-wrapper me-4 @(string.IsNullOrEmpty(Model.Image) ? "d-none" : "")">
                                    <img id="imageDisplay" src="/Imgs/@Model.Image" alt="الصورة الحالية" />
                                    
                                    @* زر إزالة الصورة الحالية (يظهر فقط إذا كانت هناك صورة قديمة) *@
                                    <button type="button" id="deleteCurrentImageBtn" class="remove-image-btn @(string.IsNullOrEmpty(Model.Image) ? "d-none" : "")" aria-label="إزالة الصورة الحالية">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                    
                                    @* زر إزالة المعاينة الجديدة (يظهر فقط عند رفع صورة جديدة) *@
                                    <button type="button" id="removeNewImageBtn" class="remove-image-btn d-none" aria-label="إزالة الصورة الجديدة">
                                        <i class="bi bi-x fw-bold"></i>
                                    </button>
                                </div>
                                
                                @* 2. حقل إدخال الملفات *@
                                <div class="flex-grow-1">
                                    <input type="file" name="file" id="ImageFile" class="form-control form-control-lg" accept="image/*" />
                                    <small class="form-text text-muted">اختر ملف صورة جديد لتغيير الصورة الحالية.</small>
                                </div>
                            </div>
                            <span asp-validation-for="Image" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <button type="submit" class="btn btn-success btn-lg fw-bold py-2">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                حفظ التعديلات
                            </button>
                            
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg py-2">
                                <i class="bi bi-arrow-left me-2"></i>
                                إلغاء والعودة للقائمة
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('ImageFile');
            const currentWrapper = document.getElementById('currentImageWrapper');
            const imageDisplay = document.getElementById('imageDisplay');
            const deleteCurrentBtn = document.getElementById('deleteCurrentImageBtn');
            const removeNewBtn = document.getElementById('removeNewImageBtn');
            const removeFlag = document.getElementById('removeCurrentImageFlag');
            const originalImagePath = imageDisplay.src;
            const hasInitialImage = originalImagePath.indexOf('/Imgs/') !== -1 && originalImagePath.indexOf('null') === -1;

            // 1. عرض معاينة الصورة الجديدة
            fileInput.addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function (e) {
                        imageDisplay.src = e.target.result;
                        currentWrapper.classList.remove('d-none');
                        deleteCurrentBtn.classList.add('d-none'); // إخفاء زر حذف الصورة القديمة
                        removeNewBtn.classList.remove('d-none');  // إظهار زر إزالة المعاينة الجديدة
                        removeFlag.value = 'false';             // تأكد من أننا لا نحذف القديمة
                    };
                    
                    reader.readAsDataURL(this.files[0]);
                }
            });

            // 2. إزالة المعاينة الجديدة (الـ X)
            removeNewBtn.addEventListener('click', function () {
                currentWrapper.classList.add('d-none');
                imageDisplay.src = '#';
                fileInput.value = ''; // مسح الملف المختار
                removeNewBtn.classList.add('d-none'); // إخفاء زر الإزالة الجديدة

                // إذا كان هناك صورة قديمة، أعد عرضها وزر الحذف
                if (hasInitialImage) {
                    imageDisplay.src = originalImagePath;
                    currentWrapper.classList.remove('d-none');
                    deleteCurrentBtn.classList.remove('d-none');
                }
            });

            // 3. حذف الصورة الحالية (الـ Trash Can)
            deleteCurrentBtn.addEventListener('click', function () {
                currentWrapper.classList.add('d-none');
                imageDisplay.src = '#';
                fileInput.value = ''; // مسح أي ملف اختير بالخطأ
                
                // تفعيل العلم الذي سيخبر الـ Controller بحذف الملف القديم
                removeFlag.value = 'true'; 
            });
        });
    </script>
}